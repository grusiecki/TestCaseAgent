---
import Layout from '@/layouts/Layout.astro';
import { GenerateDetailsView } from '@/components/generate-details/GenerateDetailsView';

const { projectId } = Astro.params;
if (!projectId) {
  return Astro.redirect('/404');
}

// Disable static generation for this route as it depends on dynamic data
export const prerender = false;
---

<Layout title="Generate Test Case Details">
  <GenerateDetailsView client:load projectId={projectId} />
</Layout>
